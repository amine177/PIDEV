        <div class="col-lg-4">
            <div class="detailBox">
                <div class="titleBox">
                    <label>Comment Box</label>

                </div>

                <div class="actionBox">
                    <ul class="commentList">
                        {% for commentaire in commentaire  %}
                        <li>
                            <div class="commenterImage">
                                <img src="http://placekitten.com/50/50" />
                            </div>
                            <div class="commentText">
                                <p class="">{{ commentaire.contenu }}</p> <span class="date sub-text">{{ commentaire.date | date('d-m-Y ') }}</span><br>

