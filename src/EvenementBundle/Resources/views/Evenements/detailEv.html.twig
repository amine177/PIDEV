        width: 50%;}
    .tours-1-description {line-height: 1.8;}
    .gray-text {color: #B1B1B1;}
    p{font-family: 'Open Sans', sans-serif;}
    a{font-family: 'Open Sans', sans-serif;}

    .tm-tours-box-1-link-left , .tm-tours-box-1-link-right {    color: white;
